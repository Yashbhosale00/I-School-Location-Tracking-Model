<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/xyz"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp"
        tools:context=".AddSalesExecutive">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="103dp"
            android:layout_height="87dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/hdd" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto_slab"
            android:gravity="center"
            android:text="Add Sales Executive"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold" />

        <!-- CardView for Name EditText -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#BED8D9"
            app:cardElevation="4dp">

            <EditText
                android:id="@+id/name"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:fontFamily="@font/roboto_slab"
                android:hint="Name"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <!-- Repeat for other EditText, Spinner, and Button -->

        <!-- CardView for Surname EditText -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#BED8D9"

            app:cardElevation="4dp">

            <EditText
                android:id="@+id/surname"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:fontFamily="@font/roboto_slab"
                android:hint="Surname"
                android:textColor="@color/black"
                android:inputType="text"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <!-- CardView for Gender Spinner -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#BED8D9"

            app:cardElevation="4dp">

            <Spinner
                android:id="@+id/genderSpinner"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:spinnerMode="dialog"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/roboto_slab"
                android:prompt="@string/select_gender"
                android:entries="@array/gender_options" />
        </androidx.cardview.widget.CardView>

        <!-- Repeat for other EditText, Spinner, and Button -->

        <!-- CardView for Email EditText -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#BED8D9"

            app:cardElevation="4dp">

            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:fontFamily="@font/roboto_slab"
                android:hint="Email"
                android:inputType="text"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <!-- CardView for Username EditText -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#BED8D9"
            app:cardElevation="4dp">

            <EditText
                android:id="@+id/username"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:fontFamily="@font/roboto_slab"
                android:hint="Username"
                android:inputType="text"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <!-- CardView for Password EditText -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#BED8D9"

            app:cardElevation="4dp">

            <EditText
                android:id="@+id/pass"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:fontFamily="@font/roboto_slab"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="@color/black" />
        </androidx.cardview.widget.CardView>

        <!-- CardView for Login Button -->
<!--        <androidx.cardview.widget.CardView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="16dp"-->
<!--            app:cardCornerRadius="10dp"-->
<!--            app:cardBackgroundColor="#BED8D9"-->

<!--            app:cardElevation="4dp">-->

            <Button
                android:id="@+id/login"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:backgroundTint="#2ACFF0"
                android:fontFamily="@font/audiowide"
                android:text="Login"
                android:textSize="20sp" />
<!--        </androidx.cardview.widget.CardView>-->

    </LinearLayout>
</ScrollView>
